{
  "name": "wati_automation",
  "version": "1.0.0",
  "description": "寵物善終服務WhatsApp訊息模板管理系統",
  "main": "index.js",
  "scripts": {
    "start": "node local-test-server.js",
    "dev": "node local-test-server.js",
    "build": "node build.js",
    "build:prod": "NODE_ENV=production node build.js",
    "deploy:staging": "node deploy.js --env=staging",
    "deploy:prod": "node deploy.js --env=production",
    "test": "jest",
    "test:api": "node test-api.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "validate": "node tools/template_validator.js",
    "validate:all": "npm test",
    "debug": "node debug-server.js",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "babel-loader": "^8.2.2",
    "clean-css": "^5.3.3",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "style-loader": "^3.2.1",
    "uglify-js": "^3.19.3",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "nodemon": "^2.0.12"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "寵物善終服務團隊",
